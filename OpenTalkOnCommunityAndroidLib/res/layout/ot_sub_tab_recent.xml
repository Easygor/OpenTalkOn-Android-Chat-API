<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@android:color/white">
    <ListView android:id="@+id/oto_community_list"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="@drawable/oto_list_background"
        android:cacheColorHint="#00000000"
        android:footerDividersEnabled="true"
        android:transcriptMode="disabled"
        android:listSelector="@android:color/transparent"
		android:divider="#c4c4c4"
		android:focusable="false"
    	android:dividerHeight="1px"/>
    <TextView android:id="@+id/oto_community_empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
		android:background="@drawable/oto_list_btn_tab_selector"
        android:textColor="@android:color/black"
        android:text="@string/oto_conv_not_exist"/>
	<RelativeLayout android:layout_width = "fill_parent"
		android:layout_height= "fill_parent"
		android:background="@drawable/oto_list_background"
		android:id="@+id/oto_community_progress">
    	<LinearLayout android:layout_width = "wrap_content"
			android:layout_height= "wrap_content"
			android:orientation="horizontal"
			android:layout_centerInParent="true">
			<ProgressBar android:layout_width = "17dip"
				android:layout_height= "17dip"
				android:layout_gravity="center_vertical"/>
			<TextView android:layout_width = "wrap_content"
				android:layout_height= "wrap_content"
				android:textColor="@android:color/black"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="5dip"
				android:textSize="16sp"
				android:text="@string/oto_networking"
				android:id="@+id/oto_my_page_prog_text"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
