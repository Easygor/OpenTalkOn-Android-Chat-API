<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:clickable="false">
	    <FrameLayout android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:id="@+id/oto_friend_detail_full_image">
	        <FrameLayout android:layout_width="match_parent"
	        	android:layout_height="match_parent">
			    <ImageView android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:scaleType="fitXY"
			        android:src="@drawable/oto_user_background"
			        android:id="@+id/oto_friend_detail_image"/>
		    </FrameLayout>
		    <LinearLayout android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_gravity="bottom"
		        android:layout_marginBottom="80dp"
		        android:orientation="horizontal"
		        android:gravity="center_vertical|right">
			    <ImageView android:layout_width="40dp"
			        android:layout_height="40dp"
			        android:id="@+id/oto_friend_detail_admin"
			        android:layout_marginRight="5dp"/>
			    <ImageView android:layout_width="40dp"
			        android:layout_height="40dp"
			        android:id="@+id/oto_oto_friend_detail_facebook"
			        android:src="@drawable/oto_facebook_button"
			        android:layout_marginRight="5dp"/>
		    </LinearLayout>
		    <TextView android:layout_width="match_parent"
		        android:layout_height="80dp"
		        android:layout_gravity="bottom"
		        android:textColor="@android:color/white"
		        android:id="@+id/oto_friend_detail_introduce"
		        android:background="#77000000"
		        android:padding="5dp"
		        android:textSize="12dp"
		        android:text="Why so serious?"/>
	        <FrameLayout android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="4dp"
	            android:background="#77000000"
	            android:layout_gravity="top">
	            <TextView android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="25dp"
	                android:layout_gravity="left"
	                android:layout_marginLeft="5dp"
	                android:textSize="13dp"
			        android:textColor="@android:color/white"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:id="@+id/oto_friend_detail_nick_name"/>
		        <ImageView android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:layout_gravity="right"
		            android:id="@+id/oto_main_cancel_button"
		            android:background="@drawable/oto_close"/>
	        </FrameLayout>
	    </FrameLayout>
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:id="@+id/oto_friend_detail_btn_layout"
	        android:orientation="horizontal">
	        <LinearLayout android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1.0"
	            android:clickable="true"
	            android:id="@+id/oto_friend_detail_btn1"
	            android:paddingBottom="7dp"
	            android:orientation="vertical"
	            android:background="@drawable/oto_popup_button_selector_l">
		        <ImageView android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
		            android:layout_weight="1.0"
		            android:layout_gravity="center"/>
			    <TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="2dp"
				    android:layout_marginRight="2dp"
				    android:textSize="12sp"
				    android:textColor="#edd376"
				    android:gravity="center"
				    android:layout_gravity="center"/>
			</LinearLayout>
	        <LinearLayout android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1.0"
	            android:clickable="true"
	            android:id="@+id/oto_friend_detail_btn2"
	            android:paddingBottom="7dp"
	            android:orientation="vertical"
	            android:background="@drawable/oto_popup_button_selector_lr">
		        <ImageView android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
		            android:layout_weight="1.0"
		            android:layout_gravity="center"/>
			    <TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="2dp"
				    android:layout_marginRight="2dp"
				    android:textSize="12sp"
				    android:textColor="#edd376"
				    android:gravity="center"
				    android:layout_gravity="center"/>
			</LinearLayout>
	        <LinearLayout android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1.0"
	            android:clickable="true"
	            android:id="@+id/oto_friend_detail_btn3"
	            android:paddingBottom="7dp"
	            android:orientation="vertical"
	            android:background="@drawable/oto_popup_button_selector_r">
		        <ImageView android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
		            android:layout_weight="1.0"
		            android:layout_gravity="center"/>
			    <TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="2dp"
				    android:layout_marginRight="2dp"
				    android:textSize="12sp"
				    android:textColor="#edd376"
				    android:gravity="center"
				    android:layout_gravity="center"/>
			</LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    <View android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:layout_gravity="top"
		 android:id="@+id/oto_friend_detail_cover"
		 android:background="@drawable/oto_pop_up_image_cover"/>
</FrameLayout>
