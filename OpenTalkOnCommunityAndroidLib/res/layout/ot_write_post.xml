<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/oto_top">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/oto_text_reverse_color"
            android:layout_gravity="center"
            android:id="@+id/oto_base_tab_title"
            android:text="@string/oto_lib_name"/>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right">
	        <View android:layout_width="2px"
	            android:layout_height="32dp"
	            android:layout_gravity="center_vertical"
	            android:background ="@drawable/oto_top_line"/>
	        <FrameLayout android:layout_width="40dp"
	            android:layout_height="fill_parent"
	            android:background="@drawable/oto_top_btn_selector"
	            android:id="@+id/oto_main_cancel_button">
		        <ImageView android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:layout_gravity="center"
		            android:background="@drawable/oto_close"/>
	        </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:fillViewport="true">
		<LinearLayout android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#ffffff"
		    android:orientation="horizontal"
		    android:padding="15dp">
	        <ImageView android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:scaleType="fitXY"
	            android:id="@+id/oto_write_post_user_img"
	            android:src="@drawable/oto_friend_img_01"/>
	    	<EditText android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/oto_conv_icon_left"
		    	android:layout_marginTop="10dp"
		    	android:layout_marginLeft="1dp"
		    	android:textSize="15dp"
		    	android:autoLink="web"
		    	android:id="@+id/oto_write_post_body"
		    	android:text=""
		    	android:hint="@string/oto_insert_message_hint"
		    	android:gravity="top"
		    	android:textColor="@android:color/black"/>
		</LinearLayout>
	</ScrollView>
	<HorizontalScrollView android:layout_width="fill_parent"
		android:layout_height="100dp"
		android:id="@+id/oto_write_post_image_bar_layout"
		android:visibility="gone"
		android:scrollbars="none"
		android:fillViewport="true">
		<LinearLayout android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:background="@drawable/oto_main_tab_background"
		    android:id="@+id/oto_write_post_image_bar">
	    </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:background="#f0f0f0">
	    <LinearLayout android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="60dp"
		    android:layout_gravity="left|center_vertical"
		    android:gravity="center_vertical"
		    android:orientation="horizontal"
		    android:clickable="false">
		     <FrameLayout android:layout_width="40dp"
		 		android:layout_height="40dp"
		 		android:padding="4dp"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center_vertical"
		 		android:clickable="true"
		 		android:id="@+id/oto_write_post_camera"
		 		android:background="@drawable/oto_community_list_btn_selector">
		 		<ImageView
		 		    android:layout_width="fill_parent"
		 		    android:layout_height="fill_parent"
		 		    android:src="@drawable/oto_conv_camera" />
			 </FrameLayout>
		     <FrameLayout android:layout_width="40dp"
		 		android:layout_height="40dp"
		 		android:padding="4dp"
				android:layout_marginRight="10dp"
				android:layout_gravity="center_vertical"
		 		android:clickable="true"
		 		android:id="@+id/oto_write_post_image"
		 		android:background="@drawable/oto_community_list_btn_selector">
		 		<ImageView android:layout_width="fill_parent"
		 		    android:layout_height="fill_parent"
		 		    android:src="@drawable/oto_conv_image"/>
			 </FrameLayout>
		     <FrameLayout android:layout_width="40dp"
		 		android:layout_height="40dp"
		 		android:padding="4dp"
				android:layout_gravity="center_vertical"
		 		android:clickable="true"
		 		android:id="@+id/oto_write_post_image_many"
		 		android:background="@drawable/oto_community_list_btn_selector">
		 		<ImageView android:layout_width="fill_parent"
		 		    android:layout_height="fill_parent"
		 		    android:src="@drawable/oto_conv_image_many"/>
			 </FrameLayout>
		 </LinearLayout>
        <Button android:layout_width="wrap_content"
            android:id="@+id/oto_write_post_done"
            android:minWidth="60dp"
            android:layout_margin="5dp"
		    android:layout_height="35dp"
		    android:layout_gravity="right|center_vertical"
		    android:background="@drawable/oto_yellow_btn_selector"
		    android:text="@string/oto_done"
		    android:textStyle="bold"
		    android:textSize="15sp"
		    android:textColor="@drawable/oto_base_btn_text_selector"/>
    </FrameLayout>
</LinearLayout>
