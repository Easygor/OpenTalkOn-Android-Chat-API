<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pretty="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:orientation="horizontal"
	    android:background="@drawable/oto_top_bar_background">
	    <ImageView android:layout_width="45dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/sh_topbar_btn_selector"
	        android:layout_margin="1dp"
	        android:src="@drawable/sidemenu"
	        android:padding="10dp"
	        android:id="@+id/oto_main_menu"/>
	    <TextView android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginRight="45dp"
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:text="@string/oto_lib_name"
	        android:textSize="15sp"
	        android:textStyle="bold"
	        android:textColor="#FF0000"/>
	</LinearLayout>
	<FrameLayout android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/oto_main_layout"
	    android:layout_weight="1.0"
	    android:background="#f3f3f3"/>
</LinearLayout>
